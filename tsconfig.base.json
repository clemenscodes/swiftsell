{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@config": ["libs/config/src/index.ts"],
            "@db": ["libs/db/src/index.ts"],
            "@hooks": ["libs/hooks/src/index.ts"],
            "@redux": ["libs/redux/src/index.ts"],
            "@shared": ["libs/shared/src/index.ts"],
            "@styles": ["libs/styles/src/index.ts"],
            "@utils": ["libs/utils/src/index.ts"],
            "test": ["libs/test/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
