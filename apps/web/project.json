{
    "name": "web",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/web",
    "projectType": "application",
    "targets": {
        "env": {
            "executor": "nx:run-commands",
            "defaultConfiguration": "development",
            "configurations": {
                "development": {
                    "command": "apps/web/scripts/env.sh development"
                },
                "production": {
                    "command": "apps/web/scripts/env.sh production"
                }
            }
        },
        "build": {
            "dependsOn": ["env"],
            "executor": "@nrwl/next:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "root": "apps/web",
                "outputPath": "dist/apps/web",
                "assets": [
                    {
                        "input": "libs/shared/assets",
                        "glob": "**/*",
                        "output": ""
                    }
                ]
            }
        },
        "start": {
            "executor": "@nrwl/next:server",
            "defaultConfiguration": "development",
            "configurations": {
                "development": {
                    "buildTarget": "web:build:development",
                    "hostname": "0.0.0.0",
                    "dev": true
                },
                "production": {
                    "buildTarget": "web:build:production",
                    "dev": false
                }
            }
        },
        "start:docker": {
            "dependsOn": ["build"],
            "color": true,
            "command": "apps/web/scripts/start.sh"
        },
        "dev": {
            "dependsOn": ["^build", "build"],
            "executor": "nx:run-commands",
            "defaultConfiguration": "docker",
            "configurations": {
                "development": {
                    "color": true,
                    "command": "nx run-many --parallel=8 --target=start:docker --output-style=stream --projects=web,firebase,api swiftsell-development"
                },
                "docker": {
                    "color": true,
                    "command": "docker-compose -f apps/web/docker/docker-compose.yml up -d"
                },
                "production": {
                    "color": true,
                    "command": "nx start web --configuration=production"
                }
            }
        },
        "stop": {
            "command": "docker-compose -f apps/web/docker/docker-compose.yml stop"
        },
        "export": {
            "executor": "@nrwl/next:export",
            "options": {
                "buildTarget": "web:build:production"
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/web/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/web/**/*.{ts,tsx,js,jsx}"]
            }
        },
        "analyze": {
            "command": "ANALYZE=true nx build web --skip-nx-cache"
        },
        "docker": {
            "executor": "@nx-tools/nx-container:build",
            "defaultConfiguration": "local",
            "configurations": {
                "development": {
                    "engine": "docker",
                    "file": "apps/web/docker/Dockerfile.development",
                    "load": true,
                    "metadata": {
                        "images": ["web"],
                        "tags": ["type=schedule", "type=sha"]
                    }
                },
                "local": {
                    "engine": "docker",
                    "file": "apps/web/docker/Dockerfile.production",
                    "load": true,
                    "metadata": {
                        "images": [],
                        "tags": ["type=schedule", "type=sha"]
                    }
                },
                "ci": {
                    "engine": "docker",
                    "file": "apps/web/docker/Dockerfile.production",
                    "load": true,
                    "cache-from": ["type=gha"],
                    "cache-to": ["type=gha,mode=max"],
                    "metadata": {
                        "images": [],
                        "tags": ["type=schedule", "type=sha"]
                    }
                }
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "defaultConfiguration": "development",
            "configurations": {
                "development": {
                    "color": true,
                    "command": "apps/web/scripts/deploy.sh development"
                },
                "production": {
                    "color": true,
                    "command": "apps/web/scripts/deploy.sh production"
                }
            }
        },
        "build-custom-server": {
            "executor": "@nrwl/js:tsc",
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/apps/web/.next/standalone/apps/web/server",
                "main": "apps/web/server.ts",
                "tsConfig": "apps/web/tsconfig.server.json",
                "clean": false,
                "assets": []
            },
            "configurations": {
                "development": {},
                "production": {}
            }
        },
        "server": {
            "command": "apps/web/scripts/server.sh"
        },
        "serve": {
            "command": "apps/web/scripts/standalone.sh"
        }
    },
    "implicitDependencies": [
        "api",
        "firebase",
        "infra-run",
        "infra-wif",
        "infra-firebase",
        "infra-artifact",
        "infra-bucket-cdn",
        "infra-bucket-state",
        "infra-bucket-isr"
    ],
    "tags": []
}
